#include<stdio.h>
int main()
{
	//변수 선언
	int opt;
	double num1, num2;
	double result;
	
	printf("<1>덧셈 <2>뺄셈 <3>곱셈 <4>나눗셈 중 고르시오.");
	scanf("%d", &opt);
	printf("두 수를 입력하시오.");
	scanf("%f %f", &num1, &num2);

	if (opt == 1)
		result = num1 + num2;
	else if (opt == 2)
		result = num1 - num2;
	else if (opt == 3)
		result = num1 * num2;
	else
		result = num1 / num2;

	//출력
	printf("결과는 %f입니다", result);
	return 0;
}
